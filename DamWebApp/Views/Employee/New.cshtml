}

<h1>New</h1>

<form asp-action="SaveNew"  asp-controller="Employee" method="post"> 
    @* asp-route-id="@Model.Id" *@
  @*   @Html.AntiForgeryToken() *@
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input class="form form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>

    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>

    <div>
        <label asp-for="ImageURL"></label>
        <input class="form form-control" asp-for="ImageURL" />
        <span asp-validation-for="ImageURL" class="text-danger"></span>

    </div>

    <div>
        <label asp-for="DepartmentId" ></label>
